                imgUrl: 'http://iapm.cjoy.cn/images/share1.jpg', // 分享图标
                success: function () {
                    // 用户确认分享后执行的回调函数
                },
                cancel: function () {
                    // 用户取消分享后执行的回调函数
                }
            });


            wx.onMenuShareAppMessage({
                title: 'please visit us at iapm mall for the iapm “shake and win”reward !', // 分享标题
                desc: '“shake and win”reward, come and join us!', // 分享描述
                link: 'http://iapm.cjoy.cn/home/NoIndex', // 分享链接
                imgUrl: 'http://iapm.cjoy.cn/images/share1.jpg', // 分享图标
                type: '', // 分享类型,music、video或link，不填默认为link
                dataUrl: '', // 如果type是music或video，则要提供数据链接，默认为空
                success: function () {
                    // 用户确认分享后执行的回调函数
                },
                cancel: function () {
                    // 用户取消分享后执行的回调函数
                }
            });







        });

    </script>

