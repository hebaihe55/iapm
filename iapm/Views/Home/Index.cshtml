@{
    Layout = null;
}


<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <title>首页</title>
    <link href="/css/reset.css" rel="stylesheet" type="text/css" />
    <link href="/css/com.css" rel="stylesheet" type="text/css" />
    <link href="/css/swiper.min.css" rel="stylesheet" type="text/css" />
  
</head>

<body style="background:url('@ViewBag.img1') no-repeat #def4d6 0 150px; background-size:100% auto;">
    <div class="wrap">
        <header class="head clearfix">
            <h3><img src="/images/logo.png" /></h3>
        </header>
        <!--兑换券-->

        <p style="text-align:right;width:90%; margin-top:5px;"><a href="/home/index">中文</a> |<a href="/home/Enindex">ENGLISH</a> </p>
        <div class="storyBegin">
            
            <p><img class="word" src="@ViewBag.img6"></p>
         <div style="height:122px"></div>
        </div>

        <div class="doMore">
            <a href="javascript:void(0)" onclick="agree()"><img src="@ViewBag.img2"></a><br />
            <a href="/home/rule"><img src="@ViewBag.img3"></a><br/>
            <a href="/home/gamemap"><img src="@ViewBag.img4"></a><br />
            <a href="/home/prize"><img src="@ViewBag.img5"></a>
        </div>
        <div class="agreediv">
            <p>请同意条款!</p>
            <input type="button" value="确定" class="sure"/>

        </div>
        <div class="agreeIt"><span><label><input type="checkbox" id="agree"/><a href="/Home/TiaoKuan"  > 同意相关条款</a></label></span></div>
        
    </div>
    <div class="backdiv"></div>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript">
        function agree() {
            if ($("#agree").attr("checked")) {
                location.href = "/home/Gamebegin";
            }
            else {
                $(".backdiv").show();
                $(".agreediv").show();
            }
            $(".agreediv .sure").on("click", function () {
                $(".agreediv").hide();
                $(".backdiv").hide();

            })
        }


    </script>

</body>
</html>

