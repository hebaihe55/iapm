@{
    Layout = null;
}


<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <title>首页</title>
    <link href="/css/reset.css" rel="stylesheet" type="text/css" />
    <link href="/css/com.css" rel="stylesheet" type="text/css" />
    <link href="/css/swiper.min.css" rel="stylesheet" type="text/css" />
  
</head>

<body class="bg4">
    <div class="wrap">
        <header class="head clearfix">
            <h3><img src="/images/logo.png" /></h3>
        </header>
        <!--兑换券-->



        <p style="text-align:right;width:90%; margin-top:5px;"><a href="/home/Noindex">中文</a> |<a href="/home/EnNoindex">ENGLISH</a> </p>
        <div class="storyBegin">
            
            <p><img class="word" src="/images/ico15.png"></p>
         <div style="height:122px"></div>
        </div>
        <div class="doMore">
            <a href="javascript:void(0)" onclick="agree()"><img src="/images/ico111111.png"></a><br />
            <a href="/home/Rulebake1"><img src="/images/ico17.png"></a><br/>
            <a href="javascript:void(0)" onclick="agree()"><img src="~/images/ico333.png"></a><br />
            <a href="javascript:void(0)" onclick="agree()"><img src="/images/ico2222.png"></a>
        </div>
        <div class="agreediv">
            <p>请同意条款!</p>
            <input type="button" value="确定" class="sure" />

        </div>
        <div class="agreediv2">
            <p>请到iapm商场开始游戏!</p>
            <input type="button" value="确定" class="sure" />

        </div>
        <div class="agreeIt"><span><label><input type="checkbox" id="agree"/><a href="/Home/TiaoKuanBake"  >同意相关条款</a></label></span></div>
    </div>
    <div class="backdiv"></div>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript">
        function agree() {
            if ($("#agree").attr("checked")) {
                // alert("请到iapm商场开始游戏！")
                
                    $(".agreediv2").show();
                    $(".backdiv").show();

            }
            else {
               // alert("请同意条款！");
               
                   $(".agreediv").show();
                    $(".backdiv").show();

             
            }
           
            $(".agreediv2 .sure").on("click", function () {
                $(".agreediv2").hide();
                $(".backdiv").hide();

            })
        }
        
        $(".agreediv .sure").on("click", function () {
            $(".agreediv").hide();
            $(".backdiv").hide();

        })
    </script>
  
</body>
</html>

